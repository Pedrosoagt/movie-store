<div class="row">
  <div class="small-12 large-12 column">
    <h1><%= @movie.name %></h1>
    <p><%= @movie.description %></p>    
  </div>
</div>

<div class="row">
  <div class="small-12 large-12 column">
    <ul>
      <li><b>Year:</b> <%= @movie.year %></li>
      <li><b>Price:</b> <%= @movie.price %></li>
    </ul>
    <p>Actors:</p>
    <ul>
      <% @actors.each do |actor| %>
      <li><%= actor.name %></li>
      <% end %>
    </ul>
    <p><%= link_to 'Back', movies_path %></p>
  </div>
</div>


