<div class="row">
  <div class="small-12 large-12 column">
    <h1>List of Movies</h1>
  </div>
</div>

<div class="row">
  <div class="small-12 large-12 column">
    <p>
      <%= link_to 'Add', :new_movie %> |
      <%= link_to 'Actors', actors_path %>
    </p>
  </div>
</div>

<%= form_tag movies_path, :method => 'get' do %>
<div class="row">
 <div class="small-6 large-6 columns">
   <%= text_field_tag :search, params[:search] %>
 </div>
 <div class="small-6 large-6 columns">
   <%= submit_tag "Search", :name => nil, class: 'button tiny' %>
 </div>
</div>
<% end %>

<div class="row">
  <div class="small-12 large-12 column">
  <% if params[:search] %>
    <p><%= link_to 'All', movies_path %></p>
  <% end %>

  <% flash.each do |name, msg| %>
    <div data-alert class="alert-box success radius"><%= msg %>
      <a href="#" class="close">&times;</a>
    </div>
  <% end %>
    <table>
      <thead>
        <tr>
          <th width="10%">#</th>
          <th width="65%">Name</th>
          <th width="25%">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @movies.each do |m| %>
          <tr>
            <td><%= m.id %></td>
            <td><%= m.name %></td>
            <td>
              <%= link_to 'Show', movie_path(m.id) %> |
              <%= link_to 'Edit', edit_movie_path(m.id) %> |
              <%= link_to 'Delete', movie_path(m.id), method: :delete %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>